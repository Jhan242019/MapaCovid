<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-2 blue-gradient">
            <div class="container d-flex justify-content-end">
                <a class="navbar-brand text-white font-weight-bold"  href="/Usuario/Index">Inicio</a>
            </div>
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Usuario/Create">Crear usuario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Usuario/Profile">Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Usuario/Logout">Cerrar sesión</a>
                </li>
            </ul>
        </nav>
    </header>
    <script src="~/lib/MDB/js/jquery.min.js"></script>
    <script src="~/lib/MDB/js/popper.min.js"></script>
    <script src="~/lib/MDB/js/bootstrap.min.js"></script>
    <script src="~/lib/MDB/js/mdb.min.js"></script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site2.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
